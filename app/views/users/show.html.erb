<% @games.each do |game| %>
  <div>
    <div>
      <%= game.topic.name %> |
      <%= link_to game.created_at.strftime("%B %d, %Y") , [current_user, game] %>
    </div>
    <div>
      <% game.members.each do |member| %>
        <%= member.memberable.name %>
        <div>
        <% if member.memberable_type == "Team" %>
          <% member.memberable.players.each do |player| %>
            <%= player.name %>
          <% end %>
        <% end %>
      </div>
      <%end %>
    </div>
  </div>
<% end %>
<hr />
<%= link_to "Add Game", new_user_game_path(@user) %><br />
