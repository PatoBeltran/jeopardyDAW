<div style="padding:5px 15px;">
<% unless m.memberable_type == "Player" && m.memberable.has_team_on_game(@game) %>
  <li><strong><%= m.memberable.name %></strong></li>
<% end %>
<% if m.memberable_type == "Team" %>
  <div>
    <ul id="js-<%=m.memberable.name.split.join('')%>">
      <% m.memberable.players.each do |player| %>
        <li><%= player.name %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>