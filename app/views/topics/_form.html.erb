<%= form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :name, "Topic" %><br />
  <%= f.text_area :name %>
  <%= f.fields_for :categories do |builder| %>
    <%= render "shared/category_form", f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Category", f, :categories %>
  <%= f.submit %>
<% end %>
