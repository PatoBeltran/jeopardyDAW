<%= form_for @clue do |f| %>
  <% if @clue.errors.any? %>
    <ul>
      <% @clue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-section">
    <div class="field">
      <%= f.label :title, "Clue" %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :points, "Points" %>
      <%= f.text_field :points %>
    </div>
    <div class="field">
      <%= f.label :question, "Question" %>
      <%= f.text_field :question %>
      <%= f.label :category_id, "Category" %>
      <%= f.select(:category_id, @categories.map{|a| [a.name, a.id]}.unshift(["", ""])) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
